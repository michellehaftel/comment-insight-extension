{
  "manifest_version": 3,
  "name": "De-Escalator",
  "version": "1.0",
  "description": "Detect and de-escalate aggressive social media messages.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
